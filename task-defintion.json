{
    "containerDefinitions": [
        {
            "name": "fargate-app",
            "image": "nginx:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "entryPoint": [
                "sh",
                "-c"
            ],
            "command": [
                "/bin/sh -c \"echo '<html> <head> <title>Home Page</title> <style>body {margin-top: 40px; background-color: #333;} </style> </head><body> <div style=color:white;text-align:center> <h>Lucky Mungomeni<br>Fun: Programming & Games</h></div></body></html>' >  /usr/share/nginx/html/index.html && nginx -g 'daemon off;'\""
            ]
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512",
    "networkMode": "awsvpc",
    "family": "second-cluster-task-definition"
}

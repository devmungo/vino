{
    "containerDefinitions": [
        {
            "name": "ecs-demo-task",
            "image": "nginx:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80,
                    "protocol": "tcp"
                }
            ],
            "mountPoints": [
                {
                    "sourceVolume": "html-content",
                    "containerPath": "/usr/share/nginx/html",
                    "readOnly": true
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "html-content",
            "host": {
                "sourcePath": "/path/to/your/html-file" // Replace with the path to your HTML file
            }
        }
    ],
    "memory": "512",
    "cpu": "256",
    "networkMode": "awsvpc",
    "family": "ecs-demo-task-definition",
    "requiresCompatibilities": [
        "FARGATE"
    ]
}
